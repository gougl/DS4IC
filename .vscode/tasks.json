        "label": "build c++",
        "type": "shell",
        "command": "g++",
        "args": [
            "${file}",
            "-std=c++17",
            "-o",
            "${workspaceFolder}/temp/${fileBasenameNoExtension}.out",
            "-g"
        ],
        "group": "build",
        "presentation": {
            "echo": true,
            "focus": false,
            "panel":"shared",
            "showReuseMessage": true,
            "clear": false,
            "reveal": "silent"
        },
